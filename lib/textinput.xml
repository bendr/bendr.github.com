<component xmlns="http://bender.igel.co.jp"
  xmlns:b="http://bender.igel.co.jp/b"
  xmlns:e="http://bender.igel.co.jp/e"
  xmlns:html="http://www.w3.org/1999/xhtml"
  b:autofocus="false" e:submit="OK" id="textinput">

  <title>Text Input</title>

  <view>
    <html:form id="form">
      <html:p>
        <html:label for="v"><content/></html:label>
        <html:input type="text" name="v" id="v"/>
        <html:input type="submit" id="button"/>
      </html:p>
    </html:form>
  </view>

  <watch>
    <get view="form" dom-event="submit"/>
    <set value="e">
      e.preventDefault();
      flexo.notify(this, "@value", { input: this.views.form.v });
    </set>
  </watch>

  <watch>
    <get property="autofocus">
      return value ? "autofocus" : null;
    </get>
    <set view="v" attr="autofocus"/>
  </watch>

  <watch>
    <get property="submit"/>
    <set view="button" attr="value"/>
  </watch>

</component>
