  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:p>
      <component href="../lib/button.xml" id="button*">
        <property name="label" as="string" value="B"/>
        <view>
          #buttons`label/`label
        </view>
      </component>
      <component href="../lib/button.xml" id="button**">
        <property name="class" as="string" value="red"/>
      </component>
      <component href="../lib/button.xml" id="button***">
        <property name="enabled" as="boolean" value="false"/>
      </component>
    </html:p>
  </view>
</component>
