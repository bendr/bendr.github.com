<component xmlns="http://bender.igel.co.jp">

  <link rel="stylesheet" href="../font-awesome.css"/>
  <link rel="stylesheet" href="draw.css"/>

  <property name="color" value="black"/>
  <property name="size" value="10"/>
  <property name="slider" value="10"/>
  <property name="title" value="image-title"/>

  <property name="width" as="number" value="500"/>
  <property name="height" as="number" value="500"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:div class="title">
      <html:h2>
        DRAWING APPLICATION
      </html:h2>
    </html:div>

    <!-- Layout input boxes -->
    <html:div class="input_parameter">
      <html:div class="input_label">
        Image Title
      </html:div>
      <component id="title" href="text-box.xml" value="{title}"/>
    </html:div>

    <html:div class="input_parameter">
      <html:div class="input_label">
        Line Color
      </html:div>
      <component id="color" href="color.xml" value="{color}"/>
    </html:div>

    <html:div class="input_parameter">
      <html:div class="input_label">
        Line Width
      </html:div>
      <component id="slider" href="slider.xml" min="1" max="50" value="{slider}"/>
    </html:div>


    <!-- Include canvas component -->
    <html:div class="content">
      <component id="draw" href="draw.xml" width="500" height="500"/>
    </html:div>

    <!-- Include button bar component -->
    <component id="button-bar" href="button-bar.xml"/>

  </view>

  <watch>
    <get instance="color" property="value"/>
    <set instance="draw" property="color"/>
  </watch>

  <watch>
    <get instance="slider" property="value"/>
    <set instance="draw" property="size"/>
  </watch>

  <watch>
    <get instance="slider" property="value"/>
    <set instance="label" property="value"/>
  </watch>

  <watch>
    <get instance="title" property="value"/>
    <set instance="draw" property="title"/>
  </watch>

</component>

