<component xmlns="http://bender.igel.co.jp">
  <property name="icon"/>
  <property name="label"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <component id="button" href="button.xml" class="tiles ui-icon-button">
      <html:div class="icon-{icon}"/>
      <html:div class="label">{label}</html:div>
    </component>
  </view>

  <watch>
    <get instance="button" event="@pushed"/>
    <set instance="$self" event="@pushed"/>
  </watch>
</component>

