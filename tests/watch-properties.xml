<app xmlns="http://bender.igel.co.jp" xmlns:f="http://bender.igel.co.jp/f"
  xmlns:html="http://www.w3.org/1999/xhtml" f:x="2" f:y="3">
  <title>Watch a component property and set a view accordingly</title>
  <view>
    <html:p>x = <html:span id="x"/></html:p>
    <html:p>y = <html:span id="y"/></html:p>
  </view>
  <watch>
    <get property="x"/>
    <set view="x"/>
  </watch>
  <watch>
    <get property="y"/>
    <set view="y"/>
  </watch>
</app>

