<app xmlns="http://bender.igel.co.jp" xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:b="http://bender.igel.co.jp/b" xmlns:f="http://bender.igel.co.jp/f">

  <import href="/lib/push-button.xml"/>

  <view>
    <html:p>
      <component href="#button" id="ok-button">OK</component>
      <component href="#button" id="cancel-button">Cancel</component>
    </html:p>
  </view>

  <watch>
    <get event="@pushed" view="ok-button">
      alert("OK");
    </get>
    <get event="@pushed" view="cancel-button">
      alert("Cancel");
    </get>
  </watch>

</app>
